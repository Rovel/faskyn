<div class= "container task-container">
  <div class="row task-header">
    <h2>Outgoing Task List<%= link_to "Incoming Tasks", incoming_tasks_user_tasks_path(current_user), class: "btn btn-primary" %> <%= link_to "New Task", new_user_task_path(current_user), class: "btn btn-primary" %></h2>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="col-md-3">Name /Company name</th>
        <th class="col-md-4">Content</th>
        <th class="col-md-3">Deadline</th>
        <th class="col-md-1">Complete</th>
        <th class="col-md-1">Delete</th>
      </tr>
    </thead>
    <tbody>
      <%= render @assigned_tasks %>
    </tbody>
  </table>
  <%= will_paginate @assigned_tasks %> 
</div>
