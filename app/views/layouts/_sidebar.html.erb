<div id= "sidebar">
  <br />
  <br />
  <br />
  <br />
  
  <br />
  <br />
  <%= link_to "Show user", user_path(current_user) %>
  <br />
  <%= link_to "Index user", users_path %>
  <br />
  <%if has_profile? %>
  <%= link_to "Edit user", edit_user_profile_path(current_user) %>
