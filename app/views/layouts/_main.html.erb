<div id = "main">
  <br />
  <% if notice %>
    <div class="container">
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= notice %>
      </div>
    </div>
  <% end %>
  <% if alert %>
    <div class="container">
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= alert %>
      </div>
    </div>
  <% end %>
  <% if ( !notice && !alert ) && !flash.empty? %>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class= "alert alert-<%= key %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= value %>
      </div>
    <% end %>
  </div>
  <% end %>
  <%= yield %>
</div>