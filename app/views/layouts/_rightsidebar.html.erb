<div class="user-profile-show-sidebar">
  <%= link_to user_profile_path(@user) do %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><strong><%= @user.profile.first_name %> <%= @user.profile.last_name %></strong></h3>
    </div>
    <div class="panel-body">
      <% if @user.profile.avatar %>
        <%= image_tag @user.profile.avatar.url(:base_thumb), class: "avatar", alt: "#{@user.profile.first_name}'s_avatar", title: "#{@user.profile.first_name}'s avatar" %>
      <% end %>
      <p><%= @user.profile.company %></p>
      <p><%= @user.profile.job_title %></p>
      <p><%= @user.profile.phone_number %></p>
    </div>
  </div>
  <% end %>
</div>
<%if @conversation%>
  <%= render 'conversations/show' %>
<% end %>
