
<%if has_profile? %>
  <% if user.profile.avatar %>
    <%= link_to user do %>
      <%= image_tag current_user.profile.avatar.url(:thumb), class: 'avatar' %>
    <% end %>
  <% end %>
  <%= current_user.profile.first_name %> <%= current_user.profile.last_name %>
  <br />
  <%= current_user.profile.company %>
<% end %>