<% provide(:title, 'All users') %>
<div class="container container-form">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="user-desc" style="text-align:center">
        <h1>Users</h1>
      </div>
    </div>
    <div class="col-md-4">
      <div class = "user-search" style="text-align:right">
        <%= search_form_for @q, html: { class: "form-inline"} do |f| %>
          <% f.search_field :profile_first_name_or_profile_last_name_cont, placeholder: "Search user..", class: 'form-control' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="user-profile-index">
      <% @users.each do |user| %>
        <% if user.profile %>
          <div class="col-md-4">
            <%= link_to user do %>
              <div class="panel panel-primary">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                  <% if user.profile.avatar %>
                    <%= image_tag user.profile.avatar.url(:base_thumb), class: "avatar" %>
                  <% end %>
                  <h4><%= user.profile.first_name %> <%= user.profile.last_name %></h4>
                  <h5><%= user.profile.company %></h5>
                  <h5><%= user.profile.job_title %></h5>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


