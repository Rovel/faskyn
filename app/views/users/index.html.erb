<% provide(:title, 'All users') %>
<div class="container-fluid container-form">
  <% unless has_profile? %>
    <div class="row">
      <div class="well onboard-well" style="margin-right:30px;margin-left:30px;text-align:center;">
        <h4>HEY THERE! You can start with discovering the users and in the meantime you can create your profile:</h4>   <%= link_to "CREATE PROFILE", new_user_profile_path(current_user), class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="user-desc" style="text-align:center">
        <h2>USERS</h2>
      </div>
    </div>
    <div class="col-md-4">
      <div class = "user-search" style="text-align:right">
        <%= search_form_for @q_users, html: { class: "form-inline"} do |f| %>
          <% f.search_field :profile_full_name_or_profile_company_cont, placeholder: "Search user..", class: 'form-control' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="user-profile-index">
      <% @users.each do |user| %>
        <% if user.profile %>
          <div class="col-md-4">
            <%= link_to user do %>
              <div class="panel panel-info">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                  <% if user.profile.avatar %>
                    <%= image_tag user.profile.avatar.url(:base_thumb), class: "avatar" %>
                  <% end %>
                  <h4><%= user.profile.first_name %> <%= user.profile.last_name %></h4>
                  <h5><%= user.profile.company %></h5>
                  <h5><%= user.profile.job_title %></h5>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


