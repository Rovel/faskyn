<% provide(:title, 'All users') %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1 style="text-align:center; vertical-align:text-top">Users</h1>
    </div>
    <div class="col-md-4">
      <div class = "user-search" style="text-align:right">
        <%= search_form_for @q, html: { class: "form-inline"} do |f| %>
          <% f.search_field :profile_first_name_or_profile_last_name_cont, placeholder: "Search...", class: 'form-control' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="user-profile-index">
      <% @users.each do |user| %>
        <% if user.profile %>
          <div class="col-md-4">
            <div class="well">         
              <div class="span">
                <% if user.profile.avatar %>
                  <%= link_to user do %>
                    <%= image_tag user.profile.avatar.url(:thumb), class: 'avatar' %>
                  <% end %>
                <% end %>
              </div>
              <div class="span">
                <h4><%= link_to user do %>
                  <%= user.profile.first_name %> <%= user.profile.last_name %>
                <% end %></h4>
                <h5><%= user.profile.company %></h5>
                <% unless user.profile.job_title.blank? %>
                  <h5><%= user.profile.job_title%></h5>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </ol>
  </div>
</div>


