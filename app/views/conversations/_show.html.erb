<div class="start-conversation" data-sid= "<% current_user.id %>" data-rip= "<% @user.id %>">
<!--extra-->
<div class="chatboxhead">
  <div class="chatboxtitle">
    <i class="fa fa-comments"></i>
    <h1><%= @reciever.profile.first_name %> <%= @reciever.profile.last_name %></h1>
  </div>
  <br clear="all"/>
</div>
<div class="chatboxcontent">
  <% if @messages.any? %>
      <%= render @messages %>
  <% end %>
</div>
<div class="chatboxinput">
  <%= form_for([@conversation, @message], :remote => true, :html => {id: "conversation_form_#{@conversation.id}"}) do |f| %>
      <%= f.text_area :body, class: "chatboxtextarea", "data-cid" => @conversation.id %>
      <%= f.submit "send", class: "btn btn-primary btn-sm btn-submit"%>
  <% end %>
  <%= form_for ([@conversation, @message]) do |form| %>
    <%= form.attachment_field :message_attachment, direct: true, presigned: true %>
    <%= form.submit "upload" %>
  <% end %>
  <% if @message.message_attachment_id? %>
    <%= link_to "File", attachment_url([@conversation, @message], :message_attachment) %>
  <% end %>
</div>
</div> <!--extra-->

<%= subscribe_to conversation_path(@conversation) %>

